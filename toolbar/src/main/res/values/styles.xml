<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionModeBackground">@color/colorPrimary</item>
    <item name="actionMenuTextColor">@android:color/white</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">
      shortEdges <!-- default, shortEdges, never -->
    </item>
  </style>

  <style name="NoActionBarTheme.PrimaryWhite">
    <item name="colorPrimary">@android:color/white</item>
    <item name="colorPrimaryDark">@android:color/white</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="actionMenuTextColor">@android:color/black</item>
  </style>

  <style name="WhiteToolbarStyle">
    <item name="android:background">@android:color/white</item>
    <item name="android:theme">@style/LightToolbarTheme</item>
  </style>

  <style name="LightToolbarTheme">
    <!-- Color used for the title of the Toolbar - as long as not overridden -->
    <item name="android:textColorPrimary">@android:color/black</item>
    <!-- Used to color back button and three dots -->
    <item name="android:textColorSecondary">@android:color/black</item>
  </style>

